<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme -->
    <style name="Theme.RickAndMorty" parent="Base.Theme.RickAndMorty" />

    <!--Base custom theme -->
    <style name="Base.Theme.RickAndMorty" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Color (light theme) -->
        <item name="colorPrimary">@color/light_green_700</item>
        <item name="colorPrimaryVariant">@color/light_green_900</item>
        <item name="colorSecondary">@color/light_green_700</item>
        <item name="colorSecondaryVariant">@color/light_green_900</item>

        <item name="android:colorBackground">@color/white_300</item>
        <item name="colorSurface">@color/white_400</item>
        <item name="colorError">@color/red_300</item>

        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_50</item>

        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="colorOnSurfaceAlpha">@color/black_900_alpha_010</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.RickAndMorty.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.RickAndMorty.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.RickAndMorty.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.RickAndMorty.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.RickAndMorty.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.RickAndMorty.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.RickAndMorty.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.RickAndMorty.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.RickAndMorty.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.RickAndMorty.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.RickAndMorty.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.RickAndMorty.Overline</item>

        <!-- Shape. -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.RickAndMorty.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.RickAndMorty.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.RickAndMorty.LargeComponent
        </item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/nav_bar</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>